@model APM.Domain.Event

@{
    ViewData["Title"] = "Event Details";
}


@if (@Model == null)
{
    <div class="jumbotron">
        <div class="container">
            <h1>There was a problem</h1>
        </div>
    </div>
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                @if (ViewData["message"] != null)
                {
                    <p>@ViewData["message"]</p>
                }
            </div>
        </div>
    </div>
}
else
{
    <div class="jumbotron">
        <div class="container">
            <h1>Welcome to @Model.EventName</h1>
            <p class="lead">We're about to give you an Azure trial code.</p>
            <p>These codes give you $100 of free Azure credits.</p>
            <p>Only claim a code if you plan to use it. We have a limited number and we'll assume the code has been claimed as soon as we show it to you.</p>
        </div>
    </div>

                    <div class="container">
                        <div class="row">
                            <div class="col-md-12">
                                <dl class="dl-horizontal">
                                    <dt>
                                        @Html.DisplayNameFor(model => model.EventName)
                                    </dt>
                                    <dd>
                                        @Html.DisplayFor(model => model.EventName)
                                    </dd>
                                    <dt>
                                        @Html.DisplayNameFor(model => model.Owner)
                                    </dt>
                                    <dd>
                                        @Html.DisplayFor(model => model.Owner)
                                    </dd>
                                    <dt>
                                        @Html.DisplayNameFor(model => model.Expiry)
                                    </dt>
                                    <dd>
                                        @Model.Expiry.ToShortDateString()
                                    </dd>
                                    <dt>
                                        Codes avaliable
                                    </dt>
                                    <dd>
                                        @Model.Codes.Where(c => !c.Claimed).Count()
                                    </dd>
                                    <dt>

                                    </dt>
                                    <dd>
                                        <br />
                                        <br />
                                        <form asp-action="ClaimCode">
                                            <input type="text" hidden id="eventName" name="eventName" value="@Model.EventName">
                                            <button type="submit" class="btn btn-primary">Claim Code Now</button>
                                        </form>
                                    </dd>
                                </dl>
                            </div>

                            <br />
                            @if (ViewData["message"] != null)
                {
                                <div class="alert alert-danger">
                                    <p>@ViewData["message"]</p>
                                </div>
                            }

                        </div>
                    </div>

}



