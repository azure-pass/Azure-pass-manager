@model APM.Domain.Code

@{
    ViewData["Title"] = "Edit";
}

<div class="jumbotron">
    <div class="container">
        <h1>@ViewData["Title"] - @Model.PromoCode</h1>
        <p>Edit a code. Make updates to a code.</p>
    </div>
</div>

<div class="container">

    @if (ViewData["Message"] != null)
    {
        <div class="alert alert-danger">
            <p>@ViewData["Message"]</p>
        </div>
    }
    <form asp-action="Edit">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="PromoCode" class="control-label"></label>
            <input asp-for="PromoCode" class="form-control" readonly />
            <span asp-validation-for="PromoCode" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Expiry" class="control-label"></label>
            <input asp-for="Expiry" class="form-control" />
            <span asp-validation-for="Expiry" class="text-danger"></span>
        </div>
        <div class="form-group">
            <div class="checkbox">
                <label>
                    <input asp-for="Claimed" /> @Html.DisplayNameFor(model => model.Claimed)
                </label>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="EventName" class="control-label"></label>
            <input asp-for="EventName" class="form-control" />
            <span asp-validation-for="EventName" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Owner" class="control-label"></label>
            <input asp-for="Owner" class="form-control" />
            <span asp-validation-for="Owner" class="text-danger"></span>
        </div>
        <div class="form-group">
            <input type="submit" value="Save" class="btn btn-default" />
        </div>
    </form>
</div>